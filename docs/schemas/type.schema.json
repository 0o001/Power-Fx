{
    "$schema": "https://json-schema.org/draft/2019-09/schema",
    "$id": "https://raw.githubusercontent.com/microsoft/Power-Fx/gregli/fx-schema/docs/schemas/type.schema.json",
    "description": "Power Fx type definition schema",
    "type": "object",
    "required": [ "Type" ],
    "unevaluatedProperties": false,
    "properties": {  
        "Type":        { "type": "string", "description": "base type" },
        "Table":       { "type": "boolean", "description": "table of Type", "default": false },
        "Description": { "type": "string", "description": "description of this type" },
        "Help":        { "type": "string", "description": "help link for this type" }
    },
    "if": { "properties": { "Type": { "const": "Record" } } },
    "then": {
        "properties": {
            "Fields": { 
                "type": "object",
  	            "additionalProperties": { "type": "object", "$ref": "#" }
            }
        }
    }
}
