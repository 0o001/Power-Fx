{
    "$schema": "https://json-schema.org/draft/2019-09/schema",
    "$id": "https://raw.githubusercontent.com/microsoft/Power-Fx/gregli/fx-schema/docs/schemas/function.schema.json",
    "description": "Power Fx function definition schema",
    "type": "object",
    "required": [ "Body" ],
    "unevaluatedProperties": false,
    "$defs": { "Type": { "oneOf": [ { "type": "string" }, { "$ref": "./type.schema.json" } ] } },
    "properties": {  
        "Description": { "type": "string", "description": "description of this function" },
        "Help":        { "type": "string", "description": "help link for this function" },
        "Type":        { "$ref": "#/$defs/Type" },
        "Body":        { "type": "string", "pattern": "^\\s*=" },
        "Parameters": { 
            "type": "array",
            "items": {
                "type": "object",
                "required": [ "Name", "Type" ],
                "properties": { 
                    "Name":        { "type": "string", "description": "name of this parameter" },
                    "Required":    { "type": "boolean", "description": "parameter required?", "default": false },
                    "Description": { "type": "string", "description": "description of this parameter" },
                    "Type":        { "$ref": "#/$defs/Type" }
                }
            }
        }
    }
}
