{
    "$schema": "https://json-schema.org/draft/2019-09/schema",
    "$id": "https://raw.githubusercontent.com/microsoft/Power-Fx/gregli/fx-schema/docs/schemas/fx.schema.json",
    "description": "Power Fx .fx file schema",
    "type": "object",
    "properties": {  
        "Types": { 
            "type": "object", 
            "additionalProperties": {
                "type": "object",
				"additionalProperties": { "type": "object", "$ref": "./type.schema.json" }
            }
        },
        "Functions": { 
            "type": "object",
            "additionalProperties": {
                "type": "object",
				"additionalProperties": { "type": "object", "$ref": "./function.schema.json" }                 
            }            
        },
        "Formulas": {
            "oneOf": [ 
                { "type": "string", "pattern": "^\\s*=" },
                { 
                  "type": "array", 
                  "items": { "type": "string", "pattern": "^\\s*=" } 
                }
            ]
        }
    },
    "patternProperties": {
        "\\sAs\\s": { 
            "type": "object"
        }
    }
}
